{% extends "base.twig" %}
{% block body %}
    {% if errors is not empty %}
        <ul class="errors">
            {% for e in errors %}
                <li>{{ e }}</li>
                {% endfor %}
        </ul>
    {% endif %}

    <form method="post" action="" class="login-box">
        <div class="form-group">
            <ul>
                <li>
                    <label>Login</label>
                    <input type="email" name="email" value="{{ email }}" placeholder="E-mail" required class="form-control"/>
                </li>
                <li>
                    <label>Password</label>
                    <input type="password" name="password" placeholder="Password" required class="form-control"/>
                </li>    
                <li>
                    <label>Repeat password</label>
                    <input type="password" name="password-confirm" placeholder="Repeat Password" required class="form-control"/>
                </li>
                <li>
                    <button class="btn btn-info">Sign up</button>
                </li>
            </ul>   
        </div>
    </form>
{% endblock %}